\begin{frame}[c]{The Problem}

\begin{centering}

A normal data analysis (often):

\begin{itemize}
  \item does not run on other computers or for other people
  \item breaks after some time
\end{itemize}

\end{centering}

\end{frame}

\begin{frame}[c]{The Definition}

\begin{centering}

A reproducible analysis:

\begin{itemize}
  \item enables you to get the same results consistently
  \item is understandable across humans and computers
  \item is preserved over time
\end{itemize}

\end{centering}

\end{frame}

\begin{frame}[c]{The Solution}
\Large
\textcolor<2>{lolit}{Be \textcolor<1>{hilit}{explicit} + use \textcolor<1>{vhilit}{automation}}\\
\Huge
\onslide<2>{Practice.}
\end{frame}

